# --- FLASK ---
FLASK_APP=src.app:create_app
FLASK_DEBUG=1
SECRET_KEY=dev-secret-key-change-in-prod-12345
# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# --- DATABASE (PostgreSQL) ---
# Формат: postgresql://user:password@host:port/dbname
# Важно: хост 'db' — это имя сервиса в docker-compose
DATABASE_URL=postgresql://postgres:postgres@db:5432/school_scheduler_db

# --- POSTGRES INTERNAL (Для инициализации контейнера DB) ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=school_scheduler_db

# --- REDIS & CELERY ---
# Хост 'redis' — это имя сервиса в docker-compose
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0